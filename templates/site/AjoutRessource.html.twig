{% extends 'base.html.twig' %}

{% block title %}Ajout ressource
{% endblock %}

{% block body %}

	{# Header qu'on retrouve en haut de quelques pages du site #}
	<div id="header">
		<header class="navbar navbar-expand-lgt " style="background: linear-gradient(#AB3E69, #772b49);">
			<div
				class="container-fluid">
				<!-- Logo à gauche -->
				<a class="navbar-brand" href="{{ asset('https://www.gouvernement.fr/') }}">
					<img src="{{ asset('assets/gouv.png') }}" alt="Logo du Gouvernement" height="85" style="border-radius: 50%;">
				</a>

				<!-- Titre principal centré -->
				<div class="navbar-brand mx-auto" style="color: white; font-size: 2.5rem;">
					Ressources Relationnelles
				</div>

				<!-- Logo à droite -->
				<a class="navbar-brand" href="{{ asset('Accueil') }}">
					<img src="{{ asset('assets/logo.png') }}" alt="Logo Ressources Relationnelles" height="85">
				</a>
			</div>
		</header>
	</div>

	{# Menu de navigation qu on va retrouver juste en dessous du header et sur quelques pas du site #}
	<nav class="navbar navbar-expand-lg" style="background: linear-gradient(to bottom, #772b49, #AB3E69);">
		<div class="container-fluid">
			<a class="navbar-brand text-white">Partager</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			{% if app.user %}
				<div class="collapse navbar-collapse justify-content-end" id="navbarNav" style="color: white;">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('Accueil') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('Affichageprofil') }}">Mon compte</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('AfficherFavoris') }}">Mes favoris</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_logout') }}">Me déconnecter</a>
						</li>
					</ul>
				</div>
			{% else %}
				<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_login') }}">Se connecter</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('app_register') }}">S'inscrire</a>
						</li>
					</ul>
				</div>
			{% endif %}
		</div>
	</nav>


	<div class="card p-4 rounded">
		<div class="card-header">
			<h4>Ajouter une nouvelle ressource</h4>
		</div>
		<div class="card-body my-2">
			{{ form_start(formRessource) }}
			<div class="form-group row my-2">
				{{ form_label(formRessource.titreressource, 'Titre de la ressource', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.titreressource, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row my-2">
				{{ form_label(formRessource.descriptionressource, 'Description de la ressource', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.descriptionressource, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row my-2">
				{{ form_label(formRessource.fichierressource, 'Fichier', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.fichierressource, {'attr': {'class': 'form-control-file'}}) }}
				</div>
			</div>

			<div class="form-group row my-2">
				{{ form_label(formRessource.langueressource, 'Langue de la ressource', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.langueressource, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row my-2">
				{{ form_label(formRessource.categorieressource, 'Catégorie de la ressource', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.categorieressource, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row my-2">
				{{ form_label(formRessource.typeressource, 'Type de la ressource', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
				<div class="col-sm-9">
					{{ form_widget(formRessource.typeressource, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-12 my-2">
					<form action="{{ path('Accueil') }}" method="POST">
						<button type="submit" class="btn btn-primary">Ajouter</button>
					</form>
				</div>
			</div>

			<form action="{{ path('Accueil') }}" method="POST">
				<button type="submit" class="btn btn-danger">Annuler</button>
			</form>
		</div>
	</div>

{% endblock %}
